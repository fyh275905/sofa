# CMake package configuration file for the SofaOpenCL plugin.
# It defines the following variables:
# - SofaOpenCL_INCLUDE_DIRS
# - SofaOpenCL_LIBRARIES

@PACKAGE_INIT@

set_and_check(SOFAOPENCL_INCLUDE_DIR "@PACKAGE_SOFAOPENCL_INCLUDE_DIR@")

check_required_components(SofaOpenCL)

find_package(OpenCL REQUIRED)
find_package(SofaGeneral REQUIRED)

if(NOT TARGET SofaOpenCL)
	include("${CMAKE_CURRENT_LIST_DIR}/SofaOpenCLTargets.cmake")
endif()

set(SofaOpenCL_LIBRARIES SofaOpenCL)
set(SofaOpenCL_INCLUDE_DIRS ${SOFAOPENCL_INCLUDE_DIR} ${SofaGeneral_INCLUDE_DIRS} ${OPENCL_INCLUDE_DIRS})
