# CMake package configuration file for the SofaCUDA plugin.
# It defines the following variables:
# - SofaCUDA_INCLUDE_DIRS
# - SofaCUDA_LIBRARIES

@PACKAGE_INIT@

set_and_check(SOFACUDA_INCLUDE_DIR "@PACKAGE_SOFACUDA_INCLUDE_DIR@")

check_required_components(SofaCUDA)

find_package(SofaAdvanced REQUIRED)
find_package(SofaMisc REQUIRED)
find_package(CUDA REQUIRED)

if(NOT TARGET SofaCUDA)
	include("${CMAKE_CURRENT_LIST_DIR}/SofaCUDATargets.cmake")
endif()

set(SofaCUDA_LIBRARIES SofaCUDA)
set(SofaCUDA_INCLUDE_DIRS ${SofaMisc_INCLUDE_DIRS} ${SofaAdvanced_INCLUDE_DIRS})
