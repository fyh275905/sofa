# - Config file for the SofaFramework package
# It defines the following variables
#  SofaFramework_INCLUDE_DIRS - include directories for SofaFramework
#  SofaFramework_LIBRARIES    - libraries to link against

@PACKAGE_INIT@

set_and_check(SOFAFRAMEWORK_INCLUDE_DIR  "@PACKAGE_SOFAFRAMEWORK_INCLUDE_DIR@")

check_required_components(SofaHelper SofaDefaultType SofaCore)

find_package(TinyXML REQUIRED)

set(SOFA_HAVE_PNG     "@SOFA_HAVE_PNG@"    )
set(SOFA_HAVE_ZLIB    "@SOFA_HAVE_ZLIB@"   )
set(SOFA_HAVE_GLEW    "@SOFA_HAVE_GLUT@"   )
set(SOFA_HAVE_GLUT    "@SOFA_HAVE_GLUT@"   )
set(SOFA_HAVE_TINYXML "@SOFA_HAVE_TINYXML@")
set(SOFA_HAVE_BOOST   "@SOFA_HAVE_BOOST@"  )
set(SOFA_HAVE_BOOST_THREAD "@SOFA_HAVE_BOOST_THREAD@")
set(SOFA_HAVE_BOOST_SYSTEM "@SOFA_HAVE_BOOST_SYSTEM@")
set(SOFA_HAVE_EIGEN2  "@SOFA_HAVE_EIGEN2@" )

if( NOT TARGET SofaCore )
	include("${CMAKE_CURRENT_LIST_DIR}/SofaFrameworkTargets.cmake")
endif() 

set(SofaFramework_LIBRARIES SofaHelper SofaDefaultType SofaCore)
set(SofaFramework_INCLUDE_DIRS ${SOFAFRAMEWORK_INCLUDE_DIR} ${SOFAFRAMEWORK_DEPENDENCY_INCLUDE_DIR} )