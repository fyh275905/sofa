		-->
		
		<UncoupledConstraintCorrection />
		<Node name="Collis">
            <MeshObjLoader name="loader" filename="mesh/caducee_snake.obj" />
            <Mesh src="@loader" />
            <MechanicalObject src="@loader" name="CollisModel" />
            <Triangle />
            <Line />
            <Point />
            <BarycentricMapping input="@.." output="@." />
        </Node>
		

     				
        <Node name="Visu" tags="Visual" >
			<VisualModel  name="VisualModel" fileMesh="mesh/caducee_snake.obj"   />
			<BarycentricMapping object1="../.." object2="VisualModel" />
        </Node>
    </Node>
	
	

    <Node name="Base" >
	
		<Node name="Baton">
			<MeshObjLoader name="loader" filename="mesh/collision_batons.obj" />
            <Mesh src="@loader" />
            <MechanicalObject src="@loader" name="CollisModel" />
            <Line simulated="false" moving="false" />
            <Point simulated="false"  moving="false"/>
		</Node>
		<Node name="Boules">
			<MeshObjLoader name="loader" filename="mesh/collision_boules_V2.obj" />
            <Mesh src="@loader" />
            <MechanicalObject src="@loader" name="CollisModel" />
			<Triangle simulated="false" moving="false"/>
            <Line simulated="false" moving="false"/>
            <Point simulated="false" moving="false"/>
		</Node>	
		
