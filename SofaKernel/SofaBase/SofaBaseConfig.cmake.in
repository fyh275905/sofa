# CMake package configuration file for SofaBase

@PACKAGE_GUARD@
@PACKAGE_INIT@

set(SOFABASE_TARGETS @SOFABASE_TARGETS@)

find_package(SofaFramework QUIET REQUIRED)
find_package(SofaSimulation QUIET REQUIRED)

# Temporary list while doing packaging
set(SOFABASE_MODULES SofaBaseLinearSolver SofaEigen2Solver SofaBaseTopology SofaBaseCollision SofaBaseUtils)

foreach(module ${SOFABASE_MODULES})
    find_package(${module} QUIET REQUIRED)
endforeach()

set(SOFABASE_TARGETS SofaBaseVisual SofaBaseMechanics)

foreach(target ${SOFABASE_TARGETS})
    if(NOT TARGET ${target})
        include("${CMAKE_CURRENT_LIST_DIR}/SofaBaseTargets.cmake")
        break()
    endif()
endforeach()

if(NOT TARGET @PROJECT_NAME@)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")
endif()
check_required_components(@PROJECT_NAME@)
